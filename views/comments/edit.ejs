<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-right">
            Edit Comment
        </h1>
    </div>
    <div class="row">
        <div style="width: 50%; margin:30px auto; ">
            <form action="/blogs/<%=blog_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" , name="comment[text]" 
                        rows="5"><%=comment.text%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Post Comment</button>
                </div>
            </form>
            <a href="/blogs/<%=blog_id%>">Go back to campsite</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>