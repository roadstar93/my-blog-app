<% include ../partials/header %>

<div class="row justify-content-around">
    <div class="col-sm-10 col-lg-6">
        <div class="container">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="">Title</label>
                    <input type="text" name="blog[title]" class="form-control" id="" value="<%= blog.title %>">
                </div>
                <div class="form-group">
                    <label for="">Image</label>
                    <input type="text" name="blog[image]" class="form-control" id="" value="<%= blog.image %>">
                </div>
                <div class="form-group">
                    <label for="">Content</label>
                    <textarea class="form-control" name="blog[body]" rows="4"><%= blog.body %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary mb-2">Done</button>
                </div>

            </form>
        </div>
    </div>
</div>


<% include ../partials/footer %>